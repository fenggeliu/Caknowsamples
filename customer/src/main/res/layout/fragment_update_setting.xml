<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/blue_title"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/setting_update_back_btn_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/setting_update_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/setting_update_back_btn_margin_bottom"
                android:layout_marginEnd="@dimen/setting_update_back_btn_margin_right"
                android:layout_marginStart="@dimen/setting_update_back_btn_margin_left"
                android:layout_marginTop="@dimen/setting_update_back_btn_margin_top"
                android:background="@drawable/ic_action_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/setting_update_title_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/setting_update_title"
                android:textColor="@color/white_full"
                android:textSize="@dimen/setting_update_title_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/mpwd_current_password_padding_end"
                android:paddingStart="@dimen/setting_update_text_padding_start"
                android:paddingTop="@dimen/mpwd_current_password_padding_top"
                android:text="@string/setting_update_description_text"
                android:textColor="@color/font_black"
                android:textSize="@dimen/setting_update_description_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/setting_update_bolder">

            <EditText
                android:id="@+id/setting_update_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:ems="10"
                android:paddingEnd="@dimen/setting_update_text_padding_end"
                android:paddingStart="@dimen/setting_update_text_padding_start"
                android:paddingTop="@dimen/setting_update_text_padding_top"
                android:maxLines="1"
                android:textColorHint="#999999"
                android:textSize="@dimen/setting_update_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/setting_update_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_red_2x"
                    android:gravity="center"
                    android:text="@string/setting_update_submit_btn_text"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/setting_update_submit_btn_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>