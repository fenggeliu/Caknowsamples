<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.caknow.customer.fragment.garage.AddVehicleFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.caknow.customer.garage.fragment.AddVehicleMakeFragment"
        android:layout_above="@+id/footer"
        tools:listitem="@layout/fragment_addvehicle" />

    <ImageView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/bot_bg_3x"
        android:adjustViewBounds="true" />
</RelativeLayout>