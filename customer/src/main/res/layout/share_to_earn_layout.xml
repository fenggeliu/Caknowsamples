<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/promo_fake_abs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/blue_title"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/promo_image_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/stel_back_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/stel_back_btn_margin_bottom"
            android:layout_marginEnd="@dimen/stel_back_btn_margin_end"
            android:layout_marginStart="@dimen/stel_back_btn_margin_start"
            android:layout_marginTop="@dimen/stel_back_btn_margin_top"
            android:background="@drawable/ic_action_close"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/stel_title"
            android:textColor="@color/white_full"
            android:textSize="@dimen/stel_title_text_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/promo_image_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/car_pic_2x"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


    <TextView
        android:id="@+id/promo_copy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stel_head_description_text"
        android:textColor="@color/font_black"
        android:textSize="@dimen/stel_head_description_text_size"
        tools:layout_conversion_absoluteHeight="43dp"
        tools:layout_conversion_absoluteWidth="332dp"
        tools:layout_conversion_absoluteX="25dp"
        tools:layout_conversion_absoluteY="202dp" />

    <TextView
        android:id="@+id/promo_terms_and_conditions_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/stel_sub_description_text"
        android:textColor="@color/blue_title"
        android:textSize="@dimen/stel_sub_description_text_size"
        tools:layout_conversion_absoluteHeight="15dp"
        tools:layout_conversion_absoluteWidth="332dp"
        tools:layout_conversion_absoluteX="25dp"
        tools:layout_conversion_absoluteY="255dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/border_gray"
        android:orientation="horizontal"
        tools:layout_conversion_absoluteHeight="219dp"
        tools:layout_conversion_absoluteWidth="332dp"
        tools:layout_conversion_absoluteX="25dp"
        tools:layout_conversion_absoluteY="270dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/promo_code_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/stel_promotion_head_description_text"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/stel_promotion_description_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/promo_code_value_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/stel_promotion_description_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/promo_code_email_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_red_2x"
                    android:gravity="center"
                    android:text="@string/stel_promotion_invite_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/white_full"
                    android:textSize="@dimen/stel_promotion_invite_btn_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"></LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>