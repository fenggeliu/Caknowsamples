<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/ancl_card_number_text"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/ancl_card_number_description_text_size">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/credit_card_bolder"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ancl_card_category_display"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/creditcard_home_2x"
                                android:gravity="center" />

                            <EditText
                                android:id="@+id/ancl_card_number_input"
                                android:textCursorDrawable="@null"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:background="@null"
                                android:ems="10"
                                android:hint="@string/ancl_credit_card_number"
                                android:inputType="number"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:textColorHint="#999999"
                                android:textSize="@dimen/ancl_car_number_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ancl_camera_btn_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/ancl_camera_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/ancl_camera_margin_bottom"
                                android:layout_marginEnd="@dimen/ancl_camera_margin_right"
                                android:layout_marginStart="@dimen/ancl_camera_margin_left"
                                android:layout_marginTop="@dimen/ancl_camera_margin_top"
                                android:background="@drawable/camera_icon_2x" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/ancl_card_expiration_text"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/ancl_expiration_description_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingEnd="@dimen/ancl_cvc_padding_right"
                            android:paddingStart="@dimen/ancl_cvc_padding_left"
                            android:text="@string/ancl_card_cvc_text"
                            android:textColor="@color/font_black"
                            android:textSize="@dimen/ancl_cvc_description_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/credit_card_bolder">

                                <EditText
                                    android:id="@+id/ccExpMM"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="@string/ancl_credit_card_month"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:maxLines="1"
                                    android:textColorHint="#999999"
                                    android:textSize="@dimen/ancl_expiration_text_size"
                                    android:textCursorDrawable="@null"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/ancl_space_width"
                                android:layout_height="match_parent"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/credit_card_bolder">

                                <EditText
                                    android:id="@+id/ccExpYY"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:hint="@string/ancl_credit_card_year"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:maxLines="1"
                                    android:textColorHint="#999999"
                                    android:textSize="@dimen/ancl_expiration_text_size"
                                    android:textCursorDrawable="@null"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/ancl_cvc_margin_start"
                            android:layout_weight="1"
                            android:background="@drawable/credit_card_bolder">

                            <EditText
                                android:id="@+id/ccCVV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="@string/ancl_credit_card_cvc"
                                android:inputType="number"
                                android:maxLength="4"
                                android:maxLines="1"
                                android:textColorHint="#999999"
                                android:textSize="@dimen/ancl_cvc_text_size"
                                android:textCursorDrawable="@null"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/ancl_card_holder_name_text"
                        android:textColor="@color/font_black"
                        android:textSize="@dimen/ancl_holder_name_description_text_size"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/credit_card_bolder">

                        <EditText
                            android:id="@+id/ccName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:ems="10"
                            android:hint="@string/ancl_credit_card_holder_name"
                            android:maxLines="1"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/ancl_holder_name_text_size"
                            android:textCursorDrawable="@null"
                            ></EditText>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".9">

                    <Button
                        android:id="@+id/ancl_add_card_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_red_2x"
                        android:gravity="center"
                        android:text="@string/ancl_add_card_btn"
                        android:textAllCaps="false"
                        android:textColor="@color/white_full"
                        android:textSize="@dimen/ancl_add_card_btn_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

</LinearLayout>