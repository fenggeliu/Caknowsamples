<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- set background black -->
    <item android:id="@+id/progress_background">
        <shape>
            <!-- the four corner size is 0 -->
            <corners android:radius="0dip"/>
            <gradient
                android:endColor="#e0e2e5"
                android:startColor="#e0e2e5"/>
        </shape>
    </item>

    <!-- set the color of progress -->
    <item android:id="@+id/progress_color">
        <clip>
            <shape>
                <corners android:radius="0dip"/>
                <gradient
                    android:endColor="@color/blue_title"
                    android:startColor="@color/blue_title"
                    />
            </shape>
        </clip>
    </item>
</layer-list>