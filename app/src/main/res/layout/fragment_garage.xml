<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.caknow.android.customer.app.activity.GarageActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/service_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_title"
            android:orientation="horizontal"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:id="@+id/garage_back_btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start">

                <Button
                    android:id="@+id/garage_back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/history_layout_back_btn_margin_bottom"
                    android:layout_marginEnd="@dimen/history_layout_back_btn_margin_end"
                    android:layout_marginStart="@dimen/history_layout_back_btn_margin_start"
                    android:layout_marginTop="@dimen/history_layout_back_btn_margin_top"
                    android:background="@drawable/ic_action_close"
                    android:gravity="center" />
            </LinearLayout>
            <TextView
                android:id="@+id/garage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tbl_title"
                android:textColor="@color/white_full"
                android:textSize="@dimen/tbl_title_text_size"/>

            <TextView
                android:id="@+id/add_car_btn"
                android:layout_width="@dimen/garage_layout_add_car_btn_width"
                android:layout_height="@dimen/garage_layout_add_car_btn_height"
                android:layout_gravity="center_vertical|end"
                android:paddingEnd="@dimen/garage_layout_add_car_btn_margin_end"
                android:background="@drawable/plus__whilt_2x"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/garage_content_main" />


</android.support.design.widget.CoordinatorLayout>