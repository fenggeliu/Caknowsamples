<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/blue_title">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/message_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/close_top_2x"
                android:layout_marginTop="@dimen/messages_layout_back_btn_margin_top"
                android:layout_marginBottom="@dimen/messages_layout_back_btn_margin_bottom"
                android:layout_marginStart="@dimen/messages_layout_back_btn_margin_start"
                android:layout_marginEnd="@dimen/messages_layout_back_btn_margin_end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/messages_layout_title"
                android:textSize="@dimen/messages_layout_title_text_size"
                android:textColor="@color/white_full"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/messages_content_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <LinearLayout
            android:id="@+id/no_history_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="@dimen/message_layout_no_message_width"
                android:layout_height="@dimen/message_layout_no_message_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/message_no_2x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/history_layout_no_message_text"
                android:textSize="@dimen/message_layout_text_size"
                android:textColor="@color/description_gray"
                android:layout_marginTop="@dimen/message_layout_text_margin_top"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.caknow.android.customer.app.provider.LoadMoreListView
                android:id="@+id/load_more_refresh_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.caknow.android.customer.app.provider.LoadMoreListView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </FrameLayout>

</LinearLayout>