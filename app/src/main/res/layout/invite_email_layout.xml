<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/blue_title">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/iel_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/close_top_2x"
                android:layout_marginTop="@dimen/iel_back_btn_margin_top"
                android:layout_marginBottom="@dimen/iel_back_btn_margin_bottom"
                android:layout_marginStart="@dimen/iel_back_btn_margin_left"
                android:layout_marginEnd="@dimen/iel_back_btn_margin_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/iel_title"
                android:textSize="@dimen/iel_title_text_size"
                android:textColor="@color/white_full"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/iel_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="submit"
                android:textSize="16sp"
                android:textColor="@color/white_full"
                android:background="@color/blue_title"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@drawable/invite_email_edit_text_bolder">
            <com.caknow.android.customer.app.widget.ClearableEditText
                android:id="@+id/iel_input_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/iel_input_name_edit_text"
                android:paddingStart="@dimen/iel_full_name_hint_padding_left"
                android:paddingEnd="@dimen/iel_full_name_hint_padding_right"
                android:paddingTop="@dimen/iel_full_name_hint_padding_top"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="@dimen/iel_full_name_hint_text_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp">
                <View
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray"
                    android:layout_width="fill_parent">
                </View>
            </LinearLayout>
            <com.caknow.android.customer.app.widget.ClearableEditText
                android:id="@+id/iel_input_email_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:hint="@string/iel_input_email_edit_text"
                android:paddingStart="@dimen/iel_email_address_hint_padding_left"
                android:paddingEnd="@dimen/iel_email_address_hint_padding_right"
                android:paddingTop="@dimen/iel_email_address_hint_padding_top"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColorHint="#999999"
                android:textSize="@dimen/iel_email_address_hint_text_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp">
                <View
                    android:layout_height="1px"
                    android:background="@android:color/darker_gray"
                    android:layout_width="fill_parent">
                </View>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>