<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/blue_title">
        <LinearLayout
            android:id="@+id/mgl_back_btn_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/mgl_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/mgl_back_btn_margin_top"
                android:layout_marginBottom="@dimen/mgl_back_btn_margin_bottom"
                android:layout_marginStart="@dimen/mgl_back_btn_margin_left"
                android:layout_marginEnd="@dimen/mgl_back_btn_margin_right"
                android:background="@drawable/arrow_white_2x"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mgl_title"
                android:textSize="@dimen/mgl_title_text_size"
                android:textColor="@color/white_full" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mgl_edit_btn_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/mgl_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mgl_edit_btn_text"
                android:textSize="@dimen/mgl_edit_btn_text_size"
                android:textColor="@color/white_full"
                android:background="@color/blue_title"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mgl_no_car_title"
                    android:textSize="@dimen/mgl_no_car_text_size"
                    android:textColor="@color/description_gray"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ListView
                android:id="@+id/mgl_car_info_grid_view_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mgl_add_vehicle_btn_text"
                android:textSize="@dimen/mgl_add_vehicle_btn_text_size"
                android:textColor="@color/white_full"
                android:background="@drawable/button_start_2x"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>