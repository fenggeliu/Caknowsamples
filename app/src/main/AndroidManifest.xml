<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caknow.app">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.caknow.android.customer.app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.caknow.android.customer.app.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.caknow.android.customer.app.activity.InitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.caknow.android.customer.app.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.caknow.android.customer.app.activity.InitActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.caknow.android.customer.app.activity.InitActivity" />
        </activity>
        <activity
            android:name="com.caknow.android.customer.app.activity.SignUpActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName="com.caknow.android.customer.app.activity.InitActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.caknow.android.customer.app.activity.InitActivity" />
        </activity>
        <activity
            android:name="com.caknow.android.customer.app.home.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.caknow.android.customer.app.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.caknow.android.customer.app.home.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.caknow.android.customer.app.home.HomeActivity" />

        </activity>
        <activity
            android:name="com.caknow.android.customer.app.service.NewServiceRequestActivity"
            android:label="Service Request"
            android:theme="@style/NotitleTheme" />

        <activity
            android:name="com.caknow.android.customer.app.garage.GarageActivity"
            android:label="Garage"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.garage.NewVehicleActivity"
            android:label="New Vehicle"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.promo.PromoActivity"
            android:label="Share to Earn"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.history.HistoryActivity"
            android:label="History"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.feedback.FeedbackActivity"
            android:label="Help"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.payment.PaymentActivity"
            android:label="Credit Cards"
            android:theme="@style/NotitleTheme" />
        <activity
            android:name="com.caknow.android.customer.app.quote.QuoteActivity"
            android:label="Quotes"
            android:theme="@style/NotitleTheme" />
    </application>


</manifest>